# Environment configuration for Order Processing Service

# Database Configuration
DATABASE_URL=sqlite:///./order_service.db

# JWT Configuration (must match auth service)
JWT_SECRET_KEY=change-me-in-production-256-bit-secret
JWT_ALGORITHM=HS256

# Service URLs for inter-service communication
AUTH_SERVICE_URL=http://localhost:8001
CART_SERVICE_URL=http://localhost:8007
PRODUCT_SERVICE_URL=http://localhost:8004

# Business Configuration
TAX_RATE=0.085

# Server Configuration
HOST=0.0.0.0
PORT=8008

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Makefile for the frontend application

# Phony targets
.PHONY: all install up build lint test clean

all: install up

# Install dependencies
install:
	npm install

# Start the development server
up:
	npm run dev

# Build the application for production
build:
	npm run build

# Start the production server
start:
	npm run start

# Lint the code
lint:
	npm run lint

# Run tests
test:
	npm run test

# Clean the project
clean:
	rm -rf .next node_modules

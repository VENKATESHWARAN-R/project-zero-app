# User Profile Service Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
HOST=0.0.0.0
PORT=8002
DEBUG=false
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=sqlite:///./user_profile_service.db
# Production example: postgresql://user:password@localhost:5432/user_profile_db

# JWT Configuration (must match auth service)
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# Service Integration URLs
AUTH_SERVICE_URL=http://localhost:8001
# Optional: CART_SERVICE_URL=http://localhost:8007
# Optional: PRODUCT_SERVICE_URL=http://localhost:8004

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring and Observability
ENABLE_METRICS=false
METRICS_PORT=9090
CORRELATION_ID_HEADER=X-Correlation-ID

# Security Settings
API_KEY_HEADER=X-API-Key
ADMIN_API_KEY=admin-key-change-in-production
BCRYPT_ROUNDS=12

# Data Retention
ACTIVITY_LOG_RETENTION_DAYS=365
SOFT_DELETE_RETENTION_DAYS=30

# Performance Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
QUERY_TIMEOUT=30

# Development Settings (dev only)
RELOAD=true
AUTO_CREATE_TABLES=true